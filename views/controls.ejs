    var next = document.getElementById("next");
    var like = document.getElementById("like");
    var year = document.getElementById("yearSlider");
    var yearDisp = document.getElementById("yearDisp");
    var lang = document.getElementById("lang");
    var duration = document.getElementById("duration");
    yearDisp.innerHTML = "published before " + year.value;

    year.oninput = function() {
        yearDisp.innerHTML = "published before " + this.value;
    }

    next.addEventListener("click", function(){
        searchParams.publishedBefore = year.value + 1 + "-01-01T00:00:00Z";
        searchParams.relevanceLanguage = lang.value;
        searchParams.duration = duration.value;
        playNext(searchParams);
